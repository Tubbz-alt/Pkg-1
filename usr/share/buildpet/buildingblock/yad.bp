#!/bin/sh

PKG_NAME="yad"
PKG_VER="0.15.2"
PKG_REV="1"
PKG_DESC="Tool for dialogs from shell scripts"
PKG_CAT="BuildingBlock"
PKG_DEPS=""

download() {
	# download the sources
	[ -f $PKG_NAME-$PKG_VER.tar.xz ] && return 0
	wget --no-check-certificate http://yad.googlecode.com/files/$PKG_NAME-$PKG_VER.tar.xz
	[ $? -ne 0 ] && return 1
	return 0
}

build() {
	# extract the sources
	tar -xJvf $PKG_NAME-$PKG_VER.tar.xz
	[ $? -ne 0 ] && return 1

	cd $PKG_NAME-$PKG_VER

	# configure the package
	./configure $BASE_CONFIGURE_ARGS \
	            --prefix=/usr \
	            --disable-icon-browser \
	            --with-rgb=$(find /usr -name rgb.txt | head -n 1)
	[ $? -ne 0 ] && return 1

	# build the package
	make -j $BUILD_THREADS
	[ $? -ne 0 ] && return 1

	return 0
}

package() {	
	# fix a permissions issue	
	find . -name install-sh | xargs chmod 755
	[ $? -ne 0 ] && return 1

	# install the package
	make DESTDIR=$INSTALL_DIR install
	[ $? -ne 0 ] && return 1
	
	# keep only one icon
	mkdir $INSTALL_DIR/usr/share/pixmaps
	[ $? -ne 0 ] && return 1	
	mv $INSTALL_DIR/usr/share/icons/hicolor/48x48/apps/yad.png $INSTALL_DIR/usr/share/pixmaps
	[ $? -ne 0 ] && return 1
	rm -rf $INSTALL_DIR/usr/share/icons
	[ $? -ne 0 ] && return 1
	
	return 0
}
